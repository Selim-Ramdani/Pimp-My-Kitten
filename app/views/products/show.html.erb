<div class="container pt-5">


<div class="card mb-3 p-5 m-5 border-0" style="max-width: 1200px;">
   <div class="row no-gutters">
     <div class="col-md-4">
       <% if @product.image.attached? %>
         <%= image_tag @product.image, width: "100%" %>
       <% end %>
     </div>
     <div class="col-md-8" style="margin-bottom: 30px;">
       <div class="card-body">
         <h5 class="card-title"><%= @product.title %></h5>
         <p class="card-text"><%= @product.description %></p>
         <p class="card-text"><small class="text-muted"><%= link_to 'Edit', edit_product_path(@product) %> |
         <%= link_to 'Back', products_path %></small></p>
       </div>
     </div>
   </div>
 </div>
</div>
