<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @cart.user_id %>
</p>

<ul>
  <strong>Liste de nos produits</strong>
  <% @cart.items.each do |item| %>
    <li><%= item.product.title %> (x <%= item.quantity %>) : <%= item.total %></li>
  <% end %>
</ul>

<p>
  <strong>Total:</strong>
  <%= @cart.total %>
</p>

<% if @cart.total.to_d > 1 %>
    <%= link_to "Passer commande (LEGACY)", new_payment_path(total: @cart.total), class:"btn btn-primary" %>
    <%= button_to "Passer commande (NEXT GEN)", checkout_create_path(total: @cart.total), class: "btn btn-primary" %>
<% end %>

<%= link_to 'Edit', edit_cart_path(@cart) %> |

<%= link_to 'Back', carts_path %>
